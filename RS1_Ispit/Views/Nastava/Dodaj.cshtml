@model RS1_Ispit_asp.net_core.ViewModels.MaturskiIspitDodajVM

@{
    ViewData["Title"] = "Dodaj";
}


<h4>Dodaj Maturski Ispit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Snimi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OdabranaSkola" class="control-label">Skola</label>
                <select asp-for="OdabranaSkola" asp-items="@Model.Skole" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="OdabraniPredmet" class="control-label">Predmet</label>
                <select asp-for="OdabraniPredmet" asp-items="@Model.Predmet" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Nastavnik" class="control-label"></label>
                <input asp-for="Nastavnik" class="form-control" />
                <span asp-validation-for="Nastavnik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumIspita" class="control-label">Datum Ispita</label>
                <input asp-for="DatumIspita" class="form-control" readonly />

            </div>
            <div class="form-group">
                <label asp-for="SkolskaGodina" class="control-label">Skolska Godina</label>
                <input asp-for="SkolskaGodina" class="form-control" readonly />

            </div>
            <div class="form-group">
                <input type="submit" value="Snimi" class="btn btn-default" />
            </div>
            <input asp-for="NastavnikId" hidden />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

